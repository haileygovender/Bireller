<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".observation.ObservationDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/gradient_bg"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/obsvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agbalumoregular"
                    android:hint="@string/description_obvs"
                    android:textAlignment="center"
                    android:textColor="@color/BL2"
                    android:textColorHint="#009688"
                    android:textSize="20sp" />
                <!-- Header -->
                <ImageView
                    android:id="@+id/obsvImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/photo_circle"
                    android:contentDescription="@string/todo_image"
                    tools:ignore="ContentDescription" />

                <!-- Title -->
                <TextView
                    android:id="@+id/obsvBirdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/psterifolditalic"
                    android:hint="@string/type_of_bird_species_obs"
                    android:textAlignment="center"
                    android:textColor="@color/G8"
                    android:textColorHint="#689F38"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>
        <TextView
            android:id="@+id/obsvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:hint="@string/location_osv"
            android:layout_gravity="center"
            android:fontFamily="@font/mavenprovariablefont_wght"
            android:textColor="@color/BL2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/obsvLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mavenprovariablefont_wght"
            android:textColor="@color/BL2"
            android:hint="@string/latitude"
            android:layout_gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/obsvLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mavenprovariablefont_wght"
            android:textColor="@color/BL2"
            android:layout_gravity="center"
            android:hint="@string/longitude"
            android:textSize="18sp"
            />


    </LinearLayout>

</ScrollView>