<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".tictactoe.AddPlayerActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/gameCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/gradient_box">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_n_players_names"
                android:textAlignment="center"
                android:fontFamily="@font/psterifolditalic"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/G8"/>

            <EditText
                android:id="@+id/playerOne"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/green_border"
                android:drawableLeft="@drawable/outline_cancel_24"
                android:drawablePadding="8dp"
                android:hint="@string/enter_player_one_name"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/G8"
                android:textColorHint="#B9F6CA"
                android:textStyle="italic"
                android:importantForAutofill="no"
                tools:ignore="RtlHardcoded,TextFields,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/playerTwo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:drawableStart="@drawable/outline_circle_24"
                android:drawablePadding="8dp"
                android:hint="@string/enter_player_two_name"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/G8"
                android:textColorHint="#B9F6CA"
                android:textStyle="italic"
                android:importantForAutofill="no"
                tools:ignore="TextFields,VisualLintTextFieldSize" />

            <Button
                android:id="@+id/startGameButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/G2"
                android:text="@string/start_game"
                android:textColor="#FFEBEE"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>