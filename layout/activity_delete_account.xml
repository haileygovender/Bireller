<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.DeleteAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/gradient_bg"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Header -->
                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo_image"
                    tools:ignore="ContentDescription" />

                <!-- Title -->
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psterifolditalic"
                    android:text="@string/delete_account"
                    android:textColor="@color/G8"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logoImageView" />
            </LinearLayout>


        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusBottomStart="26dp"
            app:boxCornerRadiusBottomEnd="26dp"
            app:boxCornerRadiusTopStart="26dp"
            app:boxCornerRadiusTopEnd="26dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/black_border"
                android:hint="@string/enter_username"
                android:padding="16dp"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck,VisualLintTextFieldSize" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusBottomStart="26dp"
            app:boxCornerRadiusBottomEnd="26dp"
            app:boxCornerRadiusTopStart="26dp"
            app:boxCornerRadiusTopEnd="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/black_border"
                android:hint="@string/enter_password"
                android:padding="16dp"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck,VisualLintTextFieldSize" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="300dp"
            android:backgroundTint="@color/BL2"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:id="@+id/btnDeleteAccount"
            android:layout_marginTop="5dp"
            android:background="@drawable/green_border"
            android:textSize="18sp"
            android:text="@string/delete_account_btn"
            app:cornerRadius = "30dp"/>
    </LinearLayout>



</LinearLayout>