<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="300dp"
    android:id="@+id/locationBottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    app:layout_behavior="bottom_sheet_behavior"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_info"
        android:fontFamily="@font/agbalumoregular"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/G8"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLocationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mavenprovariablefont_wght"
        android:hint="@string/time"
        android:textColor="@color/B1"
        android:textColorHint="#26A69A"
        android:textSize="20sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mavenprovariablefont_wght"
        android:hint="@string/distance"
        android:textColor="@color/B1"
        android:textColorHint="#26A69A"
        android:textSize="20sp"
        tools:ignore="TextSizeCheck" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAdd"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/G4"
            app:backgroundTint="@color/BL2"
            app:tint="@color/BL2"
            android:src="@drawable/baseline_add_24"
            app:cornerRadius="26dp"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck,SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDirection"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/G4"
            app:backgroundTint="@color/BL2"
            app:tint="@color/BL2"
            android:src="@drawable/outline_directions_24"
            app:cornerRadius="26dp"
            tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/G2"
        android:text="@string/cancel_info"
        android:textColor="#FFEBEE"
        app:cornerRadius="26dp" />
</LinearLayout>